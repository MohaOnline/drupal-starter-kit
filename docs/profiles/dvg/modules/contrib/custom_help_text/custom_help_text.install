/**
 * Implements hook_uninstall().
 */
function custom_help_text_uninstall() {
  $vars = array(
    'fieldset',
    'collapsed',
    'collapsible',
    'title',
    'user_default',
  );

  foreach ($vars as $var) {
    variable_del('custom_help_text_' . $var);
  }
}


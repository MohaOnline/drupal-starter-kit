/**
 * Drop index on path and change the type of path.
 *
 * Replaces custom_help_text_update_7018().
 */
function custom_help_text_update_7019() {
  db_drop_index('custom_help_text', 'path');

  // Don't fail if it's already been done.
  @db_change_field('custom_help_text', 'path', 'path', array('type' => 'text'));
}

  $currencies = array(
    'USD' => array('$', ' USD'),
    'AUD' => array('$', ' AUD'),
    'CAD' => array('$', ' CAD'),
    'EUR' => array('', ' €', ' ', ','),
    'GBP' => array('£', ''),
    'CZK' => array('', ' Kč', ' ', ','),
    'DKK' => array('', ' kr.', ' ', ','),
    'HUF' => array('', ' Ft', NULL, NULL, 0),
    'JPY' => array('¥', ''),
    'NOK' => array('', ' Nkr', ' ', ','),
    'NZD' => array('NZ$', ''),
    'PLN' => array('', ' zł', ' ', ','),
    'SGD' => array('S$', ''),
    'SEK' => array('', ' kr', ' ', ','),

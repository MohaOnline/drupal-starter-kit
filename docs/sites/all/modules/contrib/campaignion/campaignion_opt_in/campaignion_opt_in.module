    'label' => t('Opt-in'),
    'description' => t('Offers a user to opt-in to future communication.'),
    'features' => [
      'conditional' => TRUE,
      'opt_in' => TRUE,
    ],
    'file' => 'campaignion_opt_in.component.inc',
    'conditional_type' => 'opt_in',

      if (isset($test['aliases'])) {
        $url = $this->url;
        foreach ($test['aliases'] as $alias) {
          $this->drupalGet($alias);
          $this->assertEqual($url, $this->url, 'Alias ' . $alias . ' was redirected correctly');
